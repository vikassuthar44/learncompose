<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnCompose"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnCompose">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity android:name="com.example.learncompose.flipcard.FlipCardActivity"
            android:exported="true">

        </activity>
        <activity android:name="com.example.learncompose.workmanager.WorkManagerActivity"
            android:exported="true">


        </activity>
        <activity android:name="com.example.learncompose.RTLSupportActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light">
        </activity>
        <activity android:name="com.example.learncompose.animation.SlideInVerticallyAnimationActivity"
            android:exported="true">
        </activity>
        <activity android:name="com.example.learncompose.otp.OtpScreenActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name="com.example.learncompose.sideeffect.SideEffectClass"
            android:exported="true">

        </activity>
        <activity android:name="com.example.learncompose.animation.AnimatedVisibilityActivity"
            android:exported="true">
        </activity>
        <activity android:name="com.example.learncompose.rtl.RTLActivity"
            android:exported="true">
        </activity>
        <activity android:name="com.example.learncompose.activity.ActivityLifeCycle"
           >
        </activity>
        <activity android:name="com.example.learncompose.coroutine.CoroutineClass"
            android:exported="true"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity android:name="com.example.learncompose.intercpetor.NetworkClass"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>